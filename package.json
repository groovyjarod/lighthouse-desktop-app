{
  "name": "Lighthouse-Automation-App",
  "version": "1.0.6",
  "description": "A react-based automation tool using Electron to emulate, React to render, and javascript to process logic.",
  "main": "main.js",
  "author": "SolutionStream",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "electron:start": "electron .",
    "dev": "concurrently \"vite\" \"npm run electron:start\"",
    "start": "vite",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "build": "vite build",
    "electron:pack": "npm run build && electron-builder --mac --win",
    "electron:pack-mac": "npm run build && electron-builder --mac",
    "electron:pack-win": "npm run build && electron-builder --win",
    "postinstall": "npx puppeteer install",
    "release:win": "npm run build && electron-builder --win --publish=always"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.10.4",
    "@electron/remote": "^2.1.2",
    "@formatjs/fast-memoize": "^2.2.7",
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "@formatjs/icu-skeleton-parser": "^1.8.14",
    "@paulirish/trace_engine": "^0.0.57",
    "@puppeteer/browsers": "^2.10.6",
    "agent-base": "^7.1.4",
    "chalk": "^5.5.0",
    "concurrently": "^9.2.0",
    "cosmiconfig": "^9.0.0",
    "cross-env": "^7.0.3",
    "debug": "^4.4.1",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "env-paths": "^2.2.1",
    "event-target-shim": "^6.0.2",
    "glob": "^11.0.3",
    "intl-messageformat": "^10.7.16",
    "js-yaml": "^4.1.0",
    "legacy-javascript": "^0.0.1",
    "lighthouse": "^12.8.1",
    "lighthouse-logger": "^2.0.2",
    "lighthouse-stack-packs": "^1.12.2",
    "lodash-es": "^4.17.21",
    "lookup-closest-locale": "^6.2.0",
    "lru-cache": "^11.1.0",
    "marky": "^1.3.0",
    "minimist": "^1.2.8",
    "ms": "^2.1.3",
    "object-inspect": "^1.13.4",
    "onetime": "^7.0.0",
    "p-limit": "^6.2.0",
    "progress": "^2.0.3",
    "proxy-agent": "^6.5.0",
    "proxy-from-env": "^1.1.0",
    "puppeteer": "^24.16.0",
    "react": "^19.1.0",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "resolve": "^1.22.10",
    "semver": "^7.7.2",
    "third-party-web": "^0.27.0",
    "tldts-core": "^7.0.11",
    "tldts-icann": "^7.0.11",
    "tslib": "^2.8.1",
    "url": "^0.11.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "child_process": "^1.0.2",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  },
  "build": {
    "asar": false,
    "appId": "com.SolutionStream.auditapp",
    "productName": "Lighthouse Automation App",
    "files": [
      "!**/.DS_Store",
      "build/**/*",
      "main.js",
      "reusables/**/*",
      "src/**/*",
      "preload.js",
      "node_modules/**/*",
      "Audit_Logic/**/*",
      "runAndWriteAudit.mjs",
      "audits/**/*"
    ],
    "extraResources": [
      {
        "from": "settings/",
        "to": "settings/"
      },
      {
        "from": "bin/node.exe",
        "to": "node.exe"
      },
      {
        "from": "audits/",
        "to": "audits/"
      },
      {
        "from": "chrome-browser/",
        "to": "chrome-browser/"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "squirrel",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "groovyjarod",
        "repo": "lighthouse-desktop-app"
      }
    ]
  }
}
